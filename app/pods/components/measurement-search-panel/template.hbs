<div class="span-1">
  <fieldset>
    <form>
      <ul>
        <li>
          <label>Strains</label>
          {{
            select-2
            multiple=true
            content=species
            value=selectedStrains
            optionValuePath="id"
            placeholder=strainLabel
          }}
        </li>
        <li>
          <label>Characteristics</label>
          {{
            select-2
            multiple=true
            content=characteristicTypes
            value=selectedCharacteristics
            optionValuePath="id"
            placeholder=charLabel
          }}
        </li>
        <li>
          {{search-button isLoading=isLoading action='search'}}
        </li>
      </ul>
    </form>
  </fieldset>
</div>
