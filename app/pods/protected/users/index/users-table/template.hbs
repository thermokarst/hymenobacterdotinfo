
<h3 id="total-users">Total users: {{users.length}}</h3>

<table class="flakes-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Date Registered</th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user|}}
      <tr>
        <td>
          {{#link-to 'protected.users.show' user}}
            {{user.name}}
          {{/link-to}}
        </td>
        <td>
          {{user.email}}
        </td>
        <td>
          {{user.fullRole}}
        </td>
        <td>
          {{null-time user.createdAt 'LL'}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
