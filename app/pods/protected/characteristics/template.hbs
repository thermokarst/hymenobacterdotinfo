<h2>{{genus-name}} Characteristics</h2>
<h3>Total characteristics: {{model.length}}</h3>

<table class="flakes-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Sort Order</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedCharacteristics as |row|}}
      {{protected/characteristics/editable-row row=row}}
    {{/each}}
  </tbody>
</table>
